<%- include('../navbar', {active: 'questions'}); -%>
<div class="row container-fluid border rounded">
  <div class="col bg-light">
    <div class="col-auto p-3 ">
      <nav class="nav nav-pills nav-fill flex-column">
        <%_ for (const user of userIDs) { -%>
          <%_ const status = (user === question.user_id) ? 'active bg-light' : 'inactive'; -%>
          <a href="/questions/<%= user -%>" class="nav-item nav-link bg-light"> <%= user -%></a>
        <%_ } -%>
      </nav>
    </div>
    <div class="col">
      <main class="p-3">
        <%_ for (const aQuestion of question) { -%>
          <h2 class="text-center"><%- aQuestion.user_id -%></h2>
          <h3>Question: <%- aQuestion.question -%></h3>
          <%_ for (const option of aQuestion.options) {-%>
            <p><%= option -%></p>

          <%_ } -%>
          <h3>Answer: <%- aQuestion.answer -%></h3>
        <%_ } -%>
      </main>
    </div>
  </div>
